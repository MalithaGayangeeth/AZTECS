<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/backg03"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/additem" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.40"
            android:text="Item ID"
            android:textColor="#0C0C0C"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/text_id2"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Name"
            android:minHeight="48dp"
            android:layout_width="5dp"
            android:layout_weight="0.75"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.40"
            android:text="Name"
            android:textColor="#0C0C0C"
            android:textSize="22dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edittext_name2"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter Name"
            android:minHeight="48dp"
            android:layout_width="5dp"
            android:layout_weight="0.75"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.40"
            android:text="Quantity"
            android:textColor="#0C0C0C"
            android:textSize="22dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edittext_quantity2"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter Name"
            android:minHeight="48dp"
            android:layout_width="5dp"
            android:layout_weight="0.75"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:layout_marginLeft="10dp"
            android:text="Price"
            android:textColor="#0C0C0C"
            android:textSize="22dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edittext_price2"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter Name"
            android:minHeight="48dp"
            android:layout_width="5dp"
            android:layout_weight="0.75"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="#0288D1"
            android:id="@+id/button_edit2"
            android:layout_weight="2"
            android:text="Edit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_margin="2dp"
            android:background="#D32F2F"
            android:id="@+id/button_delete2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="2"
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_margin="5dp"
        android:background="#C5C5C5"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>