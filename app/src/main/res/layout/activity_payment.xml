<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/img_6"
    tools:context=".Payment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="     Delivery Payment"
        android:textColor="#070707"
        android:layout_marginBottom="50dp"
        android:textSize="39dp"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Charge for 1KM"
            android:textColor="#070707"
            android:layout_marginBottom="5dp"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:text="            1500.00"
            android:textColor="#070707"
            android:textStyle="bold"
            android:textSize="24dp"
            android:minHeight="48dp"
            android:layout_width="5dp"
            android:layout_weight="0.75"
            android:ems="10"  />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Of KM"
            android:textColor="#090909"
            android:textSize="24dp"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_kilometer"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Enter Number"
            android:minHeight="48dp"
            android:layout_width="5dp"
            android:layout_weight="0.75"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Charge"
            android:textColor="#070707"
            android:layout_marginBottom="20dp"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Total Charge"
            android:minHeight="48dp"
            android:textSize="20dp"
            android:layout_width="5dp"
            android:layout_weight="0.75"
            android:ems="10"  />
    </LinearLayout>

    <TextView
        android:id="@+id/text_header3"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="100dp"
        android:text="* Total Charge is in [Rupees]"
        android:textColor="#FA0303"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#BDAB04"
        android:text="Calculate Total Charge"
        android:textColor="#030304"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#DF400E"
        android:text="PAY"
        android:onClick="displayToast"
        android:textColor="#F6F3F3"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>